# Environment Configuration Template
# Copy this file to .env and update the values

# Application Environment
NODE_ENV=development
PORT=5173

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mathverse
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
OAUTH_GOOGLE_CLIENT_ID=your-google-oauth-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# API Configuration
API_BASE_URL=http://localhost:3001/api/v1
API_RATE_LIMIT=100

# AI/ML Service
ML_SERVICE_URL=http://localhost:8000
OPENAI_API_KEY=your-openai-api-key-for-ai-features

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Cloud Storage (for AR/VR assets)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=mathverse-assets
AWS_REGION=us-west-2

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Security
CORS_ORIGIN=http://localhost:5173
BCRYPT_ROUNDS=12

# Feature Flags
ENABLE_AR_FEATURES=false
ENABLE_VR_FEATURES=false
ENABLE_MULTIPLAYER=false
ENABLE_ANALYTICS=true
